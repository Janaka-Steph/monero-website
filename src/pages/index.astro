---
import '@/assets/styles/globals.css'
import Container from '@/components/container.astro'
import Layout from '@/layouts/baseLayout.astro'
import Hero from './_home/hero/hero.astro'
import PromoVideo from './_home/promoVideo/promoVideo.astro'
import Features from './_home/features/features.astro'
import Communities from './_home/communities/communities.astro'
import DownloadWallet from './_home/downloadWallet/downloadWallet.astro'
import Sponsors from './_home/sponsors/sponsors.astro'
import Roadmap from './_home/roadmap/roadmap.astro'
import RecentBlogPosts from './_home/recentBlogPosts/recentBlogPosts.astro'
import MailingList from './_home/mailingList/mailingList.astro'
---

<Layout
  title="Home | Monero - secure, private, untraceable"
  description="Monero, a digital currency that is secure, private, and untraceable"
>
  <Container class="mt-8 lg:mt-0">
    <Hero />
  </Container>

  <Container intent="fullWidth" class="px-8 sm:px-0">
    <PromoVideo />
  </Container>

  <Container>
    <Features />
  </Container>

  <Container>
    <DownloadWallet />
  </Container>

  <Container>
    <Communities />
  </Container>

  <Container>
    <Sponsors />
  </Container>

  <Container intent="fullWidth" class="overflow-x-scroll hide-scrollbar">
    <Roadmap />
  </Container>

  <Container>
    <RecentBlogPosts />
  </Container>

  <Container>
    <MailingList />
  </Container>
</Layout>
