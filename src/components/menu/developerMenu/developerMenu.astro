---
import Container from '@/components/container.astro'
import MenuItem from '../menuItem.astro'
import MenuSubItem from '../menuSubItem.astro'
import file from '@/assets/images/icons/file.svg'
import lab from '@/assets/images/icons/lab.svg'
import nodes from '@/assets/images/icons/nodes.svg'
import refreshSquare from '@/assets/images/icons/refresh-square.svg'
import github from '@/assets/images/github.svg'
import gitlab from '@/assets/images/icons/gitlab.svg'
import moneroSquare from '@/assets/images/icons/monero-square.svg'
import chat from '@/assets/images/icons/chat.svg'
---

<div class="absolute left-0 right-0 hidden group-hover:block hover:block pt-10 bg-background shadow-menu z-10">
  <Container class="mt-0 mx-auto">
    <div class="grid grid-cols-4 gap-6">
      <div class="space-y-4">
        <MenuItem
          icon={file}
          title="Documents"
          description="Collection of guides, documentation and useful resources for developers"
          link="/developers/documents"
        />
        <MenuSubItem icon={github} />
      </div>

      <div class="space-y-4">
        <MenuItem
          icon={lab}
          title="Research"
          description="Libraries and papers for those who are interested in researching on Monero"
          link="/developers/research"
        />
        <MenuSubItem icon={gitlab} />
      </div>

      <div class="space-y-4">
        <MenuItem
          icon={nodes}
          title="Mining/Running a node"
          description="Instructions on Moner mining and running nodes on the blockchain"
          link="/developers/mining-running-node"
        />
        <MenuSubItem icon={moneroSquare} />
      </div>

      <div class="space-y-4">
        <MenuItem
          icon={refreshSquare}
          title="Project Updates"
          description="News and notices on Moneroâ€™s updates and releases"
          link="/developers/project-updates"
        />
        <MenuSubItem icon={chat} />
      </div>
    </div>
  </Container>
</div>
