---
import Container from '@/components/container.astro'
import MenuItem from '../menuItem.astro'
import moneroCircle from '@/assets/images/icons/monero-circle.svg'
import wallet from '@/assets/images/icons/wallet.svg'
import document from '@/assets/images/icons/document.svg'
import transfer from '@/assets/images/icons/transfer.svg'
---

<div class="absolute left-0 right-0 hidden group-hover:block hover:block pt-10 bg-background shadow-menu z-10">
  <Container class="mt-0 mx-auto">
    <div class="grid grid-cols-4 gap-6">
      <MenuItem
        icon={moneroCircle}
        title="Discover Monero"
        description="Learn more about Monero as the leading privacy cryptocurrency"
        link="/individuals/discover"
      />

      <MenuItem
        icon={wallet}
        title="Wallets"
        description="Download Monero wallets to start sending or receiving money in a safe manner"
        link="/individuals/wallets"
      />

      <MenuItem
        icon={document}
        title="User Guides"
        description="Get help using instructions and answers to frequently asked questions"
        link="#"
      />

      <MenuItem
        icon={transfer}
        title="Exchanges and Services"
        description="A list of products and services that accept Moneroâ€™s XMR token"
        link="#"
      />
    </div>
  </Container>
</div>
