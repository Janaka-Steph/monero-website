---
import { Image } from 'astro:assets'
import arrowRight from '../../assets/images/arrow-right.svg'
import itemPast from '../../assets/images/roadmap/item-past.svg'

interface RoadmapItem {
  year: string
  achievements: string[]
}

const { year, achievements } = Astro.props
---

<div class="flex flex-shrink-0 flex-grow-0 w-1/3 gap-x-10 z-10 justify-center">
  <Image src={itemPast} alt="item" class="" />
  <div class="flex flex-col justify-start items-start space-y-2">
    <div class="text-xl font-semibold">{year}</div>
    <ul class="text-sm list-disc">
      {achievements.map((achievement: string) => <li>{achievement}</li>)}
    </ul>
    <a href="#" target="_blank" class="flex gap-x-2 items-center">
      <span class="text-primary text-sm">Details</span>
      <Image src={arrowRight} alt="arrow" class="w-3" />
    </a>
  </div>
</div>
