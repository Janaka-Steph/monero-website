---
interface Props {
  leftClass?: string
  rightClass?: string
  wrapperClass?: string
  hasLeftImage?: boolean
  hasRightImage?: boolean
}

const { leftClass, rightClass, hasRightImage = false, hasLeftImage = false, wrapperClass } = Astro.props
---

<div
  class:list={[
    'flex flex-wrap gap-x-8 md:gap-x-16 lg:gap-x-32 md:flex-nowrap justify-between space-y-8 md:space-y-0',
    wrapperClass,
  ]}
>
  {
    hasLeftImage ? (
      <div class:list={['flex-1 min-w-full md:min-w-0 flex justify-center md:justify-start', leftClass]}>
        <slot name="left" />
      </div>
    ) : (
      <div class:list={['flex-1 space-y-6 text-center md:text-left', leftClass]}>
        <slot name="left" />
      </div>
    )
  }
  {
    hasRightImage ? (
      <div class:list={['flex-1 min-w-full md:min-w-0 flex justify-center md:justify-end', rightClass]}>
        <slot name="right" />
      </div>
    ) : (
      <div class:list={['flex-1 space-y-6 text-center md:text-left', rightClass]}>
        <slot name="right" />
      </div>
    )
  }
</div>
